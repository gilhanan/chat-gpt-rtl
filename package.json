{
  "name": "chatgpt-rtl",
  "version": "1.0.0",
  "description": "RTL support for ChatGPT. Auto-detects RTL in real-time for languages like Arabic, Hebrew, and more.",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --ext .ts ./",
    "lint-staged": "lint-staged",
    "test": "jest --config config/jest.config.ts",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "webpack": "webpack --config config/webpack.config.ts",
    "zip": "ts-node --project=tools/tsconfig.json tools/zip.ts",
    "build": "npm run webpack && npm run zip",
    "watch": "npm run webpack -- --watch"
  },
  "keywords": [
    "ChatGPT",
    "OpenAI",
    "RTL",
    "Right-to-Left",
    "Arabic",
    "Hebrew",
    "Persian",
    "Urdu",
    "Language Support",
    "Chrome Extension",
    "DOM Manipulation",
    "User Interface",
    "Usability",
    "Accessibility"
  ],
  "author": "Gil Hanan <gil.hanan@gmail.com>",
  "license": "ISC",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.7.3",
    "@playwright/test": "^1.36.2",
    "@types/archiver": "^5.3.2",
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.8.4",
    "@types/webpack": "^5.28.3",
    "archiver": "^6.0.1",
    "autoprefixer": "^10.4.14",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "crypto": "^1.0.1",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "ignore-emit-webpack-plugin": "^2.0.6",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "lint-staged": "^14.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.0",
    "sass": "^1.69.1",
    "sass-loader": "^13.3.2",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  }
}
