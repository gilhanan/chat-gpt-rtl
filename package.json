{
  "name": "chatgpt-rtl",
  "version": "1.0.0",
  "description": "RTL support for ChatGPT. Auto-detects RTL in real-time for languages like Arabic, Hebrew, and more.",
  "scripts": {
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "test": "jest --config jest.config.js",
    "test:e2e": "npm run extension-id && jest --config jest.e2e.config.js e2e",
    "extension-id": "ts-node --project=tools/tsconfig.json tools/extension-id.ts",
    "webpack": "webpack --config webpack/webpack.config.js",
    "zip": "ts-node --project=tools/tsconfig.json tools/zip.ts",
    "build": "npm run webpack && npm run zip",
    "watch": "npm run webpack -- --watch"
  },
  "keywords": [
    "ChatGPT",
    "OpenAI",
    "RTL",
    "Right-to-Left",
    "Arabic",
    "Hebrew",
    "Persian",
    "Urdu",
    "Language Support",
    "Chrome Extension",
    "DOM Manipulation",
    "User Interface",
    "Usability",
    "Accessibility"
  ],
  "author": "Gil Hanan <gil.hanan@gmail.com>",
  "license": "ISC",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/archiver": "^5.3.2",
    "@types/chrome": "^0.0.241",
    "@types/jest": "^29.5.3",
    "@types/puppeteer": "^7.0.4",
    "archiver": "^5.3.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "crypto": "^1.0.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^36.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "ignore-emit-webpack-plugin": "^2.0.6",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jest-puppeteer": "^9.0.0",
    "lint-staged": "^13.2.3",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.0",
    "puppeteer": "^20.9.0",
    "sass": "^1.63.6",
    "sass-loader": "^13.3.2",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  }
}
